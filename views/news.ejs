<%- include("header") -%>

<h1>News App</h1>
<nav>
  <% categories.forEach(function(category){ %>
  <a href="<%= category%>"><%= category %></a>
  <% }) %>
  <a href="/new-article">New Article</a>
</nav>

<div class="card-grid">
  <% articles.forEach(function(article) { %>
  <div class="article-card">
    <img src="<%= article.imageFile %>" style="width: 300px" />
    <h3><%= article.title %></h3>
    <p>By: <%= article.writer %></p>
    <p><%= article.description %></p>
    <a href="/articles/<%= article._id %>">Read more</a>
  </div>

  <% }) %>
</div>
<%- include("footer") %>
